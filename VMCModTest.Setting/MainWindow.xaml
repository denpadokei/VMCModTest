<Window x:Class="VMCModTest.Setting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMCModTest.Setting"
        xmlns:vm="clr-namespace:VMCModTest.Setting.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <DockPanel HorizontalAlignment="Left">
                <TextBox Text="{Binding FilePath}" Width="300"></TextBox>
                <Button Content="…" Command="{Binding OpenFileDialogCommand}" Width="40"></Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
